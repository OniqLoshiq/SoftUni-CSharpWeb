@model IEnumerable<Chushka.Web.Models.ViewModels.OrdersAllViewModel>

@using System.Globalization;

@{
    ViewData["Title"] = "All";
}

<h1 class="text-center">All Orders</h1>
<hr class="hr-2 bg-dark" />
<table class="table w-75 mx-auto table-hover">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-4">Order ID</th>
            <th class="col-md-2">Customer</th>
            <th class="col-md-2">Product</th>
            <th class="col-md-2">Ordered On</th>
        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }

        @foreach (var order in Model)
        {
            <tr class="row">
                <th class="col-md-1">@(counter++)</th>
                <td class="col-md-4">@order.Id</td>
                <td class="col-md-2">@order.ClientName</td>
                <td class="col-md-2">@order.ProductName</td>
                <td class="col-md-2">@order.OrderedOn.ToString("HH:mm dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
            </tr>
        }
    </tbody>
</table>


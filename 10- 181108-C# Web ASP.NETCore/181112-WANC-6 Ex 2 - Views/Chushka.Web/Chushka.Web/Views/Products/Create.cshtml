@model Chushka.Web.Models.ViewModels.ProductCreateViewModel

@using Chushka.Models.Enums

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name...">
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Price...">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Description..."></textarea>
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="product-type-holder mt-4 d-flex justify-content-around">
        @{
            foreach (ProductType type in (ProductType[])Enum.GetValues(typeof(ProductType)))
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Type" value="@type">
                    <label class="form-check-label" for="inlineRadio1">@type</label>
                </div>
            }
        }
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex justify-content-center">
        <button type="submit" class="btn chushka-bg-color">Create</button>
    </div>
</form>

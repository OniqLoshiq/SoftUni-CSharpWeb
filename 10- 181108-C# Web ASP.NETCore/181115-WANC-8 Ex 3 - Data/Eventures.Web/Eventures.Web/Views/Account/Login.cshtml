@model Eventures.Web.ViewModels.LoginUserViewModel

<h1 class="text-center">Login</h1>
<hr class="hr-3 third-width eventures-bg-color"/>
<form class="mx-auto third-width" method="post">
    <div class="form-group text-center">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" style="background-color:yellow" placeholder="Username...">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" style="background-color:yellow" placeholder="Password...">
        <span asp-validation-for="Password" class="text-danger"></span>

    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="form-group text-center">
        <div class="checkbox">
            <input asp-for="RememberMe">
            <label asp-for="RememberMe"></label>
        </div>
    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="button-holder d-flex justify-content-center mb-2">
        <button type="submit" class="btn eventures-bg-color">Login</button>
    </div>
</form>
<div class="text-center"><a href="#">Forgot your password?</a></div>
<div class="text-center"><a asp-controller="Account" asp-action="Register">Register as a new user?</a></div>
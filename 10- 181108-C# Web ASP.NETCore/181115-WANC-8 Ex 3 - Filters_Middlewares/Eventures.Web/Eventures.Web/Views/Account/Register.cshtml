@model Eventures.Web.ViewModels.RegisterUserViewModel

<h1 class="text-center">Register</h1>
<hr class="hr-3 half-width eventures-bg-color" />
<form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Username...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Email...">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Password...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password...">
        </div>
    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="First Name...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Last Name...">
        </div>
    </div>
        <div class="form-group text-center">
            <label asp-for="UCN"></label>
            <input asp-for="UCN" class="form-control" placeholder="Universal Citizen Number...">
        </div>
        <hr class="hr-3 eventures-bg-color" />
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn eventures-bg-color">Register</button>
        </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
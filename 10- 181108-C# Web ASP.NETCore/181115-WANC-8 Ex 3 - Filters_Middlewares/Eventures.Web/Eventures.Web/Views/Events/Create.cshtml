@model Eventures.Web.ViewModels.CreateEventViewModel

<h1 class="text-center">Create event</h1>
<hr class="hr-3 half-width eventures-bg-color" />
<form class="mx-auto half-width" method="post" asp-controller="events" asp-action="create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Name...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="Place"></label>
            <input asp-for="Place" class="form-control" placeholder="City, Country">
        </div>
    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="Start"></label>
            <input type="datetime-local" asp-for="Start" class="form-control">
        </div>
        <hr class="hr-3 eventures-bg-color" />
        <div class="form-group col-md-6 text-center">
            <label asp-for="End"></label>
            <input type="datetime-local" asp-for="End" class="form-control">
        </div>
    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="form-row">
        <div class="form-group col-md-6 text-center">
            <label asp-for="TotalTickets"></label>
            <input asp-for="TotalTickets" class="form-control" placeholder="Total number of tickets...">
        </div>
        <div class="form-group col-md-6 text-center">
            <label asp-for="TicketPrice"></label>
            <input asp-for="TicketPrice" class="form-control" placeholder="Price per ticket...">
        </div>
    </div>
    <hr class="hr-3 eventures-bg-color" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create event</button>
    </div>
</form>